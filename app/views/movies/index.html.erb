<h1>Discover Movies</h1>

<br>
  <%= button_to 'Discover Top-rated Movies', "/movies", params: {top_rated: true}, method: :get %>
<br>
<section class="search_form">
  <%= form_tag "/movies", method: :get %>
  <%= label_tag :keyword %>
  <%= text_field_tag :keyword %>
  <%= submit_tag "Find Movies" %>
</section>

<% @movies.each do |movie| %>
  <section class="movie">
  <p class="title">
    Movie Title: <%= movie.title %>
  </p>
  <p class="vote_average">
    Vote Average: <%= movie.vote_average %>
  </p>
  </section>
<% end %>
